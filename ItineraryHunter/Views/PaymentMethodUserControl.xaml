<UserControl
    x:Class="Kona.AWShopper.Views.PaymentMethodUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Kona.AWShopper.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors2="using:ItineraryHunter.Behaviors"
    mc:Ignorable="d">

    <!-- Page content -->
    <Grid x:Name="ContentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Card Information -->
        <Grid x:Name="CardInformationGrid" Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Card Number -->
            <TextBlock x:Name="TitleCardNumber" x:Uid="TitleCardNumber" Style="{StaticResource FormTitleStyle}"
                       Grid.Row="0" Grid.Column="0" Text="Card Number*" />
            <controls:FormFieldTextBox x:Name="CardNumber" 
                                       AutomationProperties.AutomationId="CardNumberTextBox"
                                       AutomationProperties.IsRequiredForForm="True"
                                       AutomationProperties.LabeledBy="{Binding ElementName=TitleCardNumber}"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="0" 
                                       Text="{Binding PaymentMethod.CardNumber, Mode=TwoWay}"
                                       InputScope="Number"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[CardNumber]}" />
            <TextBlock x:Name="ErrorsCardNumber" Style="{StaticResource ErrorMessageStyle}"
                       Grid.Row="2" Grid.Column="0"
                       Text="{Binding PaymentMethod.Errors[CardNumber], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />

            <!-- Cardholder Name -->
            <TextBlock x:Name="TitleCardholderName" x:Uid="TitleCardholderName" Style="{StaticResource FormTitleStyle}"
                       Grid.Row="0" Grid.Column="1" Text="Cardholder Name*" />
            <controls:FormFieldTextBox x:Name="CardholderName" 
                                       AutomationProperties.AutomationId="CardholderNameTextBox"
                                       AutomationProperties.IsRequiredForForm="True"
                                       AutomationProperties.LabeledBy="{Binding ElementName=TitleCardholderName}"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding PaymentMethod.CardholderName, Mode=TwoWay}"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[CardholderName]}" />
            <TextBlock x:Name="ErrorsCardholderName" Style="{StaticResource ErrorMessageStyle}"
                       Grid.Row="2" Grid.Column="1"
                       Text="{Binding PaymentMethod.Errors[CardholderName], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />
        </Grid>

        <!-- Expiration Date & Phone -->
        <Grid x:Name="ExpirationDateAndPhoneGrid" Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Expiration Month -->
            <TextBlock x:Name="TitleExpirationDate" x:Uid="TitleExpirationDate" Style="{StaticResource FormTitleStyle}"
                       Grid.Row="0" Grid.Column="0" Text="Expiration Date*" />
            <controls:FormFieldTextBox x:Name="ExpirationMonth" x:Uid="ExpirationMonth" 
                                       AutomationProperties.AutomationId="ExpirationMonthTextBox"
                                       AutomationProperties.IsRequiredForForm="True"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="0"
                                       Text="{Binding PaymentMethod.ExpirationMonth, Mode=TwoWay}"
                                       Watermark="Month"
                                       InputScope="Number"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[ExpirationMonth]}" />
            <TextBlock x:Name="ErrorsExpirationMonth" Style="{StaticResource ErrorMessageStyle}"
                       Grid.Row="2" Grid.Column="0"
                       Text="{Binding PaymentMethod.Errors[ExpirationMonth], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />

            <!-- Expiration Year -->
            <controls:FormFieldTextBox x:Name="ExpirationYear" x:Uid="ExpirationYear" 
                                       AutomationProperties.AutomationId="ExpirationYearTextBox"
                                       AutomationProperties.IsRequiredForForm="True"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="1"
                                       Text="{Binding PaymentMethod.ExpirationYear, Mode=TwoWay}"
                                       Watermark="Year"
                                       InputScope="Number"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[ExpirationYear]}" />
            <TextBlock x:Name="ErrorsExpirationYear" Style="{StaticResource ErrorMessageStyle}"
                       Grid.Row="2" Grid.Column="1"
                       Text="{Binding PaymentMethod.Errors[ExpirationYear], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />

            <!-- Phone -->
            <TextBlock x:Name="TitlePhoneNumber" x:Uid="TitlePhoneNumber" Style="{StaticResource FormTitleStyle}"
                       Grid.Row="0" Grid.Column="2" Text="Phone Number*" />
            <controls:FormFieldTextBox x:Name="Phone" 
                                       AutomationProperties.AutomationId="PhoneTextBox"
                                       AutomationProperties.IsRequiredForForm="True"
                                       AutomationProperties.LabeledBy="{Binding ElementName=TitlePhoneNumber}"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="2" 
                                       Text="{Binding PaymentMethod.Phone, Mode=TwoWay}"
                                       InputScope="TelephoneNumber"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[Phone]}"/>
            <TextBlock x:Name="ErrorsPhone" Style="{StaticResource ErrorMessageStyle}"
                       Grid.Row="2" Grid.Column="2"
                       Text="{Binding PaymentMethod.Errors[Phone], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />
        </Grid>

        <!-- Card Verification Info -->
        <Grid x:Name="CardVerificationInfoGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
                <ColumnDefinition  />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="TitleCardVerificationCode" x:Uid="TitleCardVerificationCode" Style="{StaticResource FormTitleStyle}"
                        Grid.Row="0" Grid.Column="0" Text="CVC2*" />
            <controls:FormFieldTextBox x:Name="CardVerificationCode" 
                                       AutomationProperties.AutomationId="CardVerificationCodeTextBox" 
                                       AutomationProperties.IsRequiredForForm="True"
                                       AutomationProperties.LabeledBy="{Binding ElementName=TitleCardVerificationCode}"
                                       Style="{StaticResource FormFieldStyle}"
                                       Grid.Row="1" Grid.Column="0" 
                                       Text="{Binding PaymentMethod.CardVerificationCode, Mode=TwoWay}"
                                       InputScope="Number"
                                       behaviors2:HighlightFormFieldOnErrors.PropertyErrors="{Binding PaymentMethod.Errors[CardVerificationCode]}" />
            <TextBlock x:Name="ErrorsCardVerificationCode" Style="{StaticResource ErrorMessageStyle}"
                        Grid.Row="2" Grid.Column="0"
                        Text="{Binding PaymentMethod.Errors[CardVerificationCode], Converter={StaticResource FirstErrorConverter}}" TextWrapping="Wrap" />
        </Grid>

