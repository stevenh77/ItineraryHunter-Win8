                AutomationProperties.AutomationId="ShoppingCartAppBarButton"
                Command="{Binding ShoppingCartNavigationCommand}" 
                Margin="0,0,5,0" 
                Style="{StaticResource CartStyle}" 
                Content="Shopping Cart"  />-->
    </StackPanel>
