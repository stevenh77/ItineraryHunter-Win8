<UserControl
    x:Class="Kona.AWShopper.Views.TopAppBarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infrastructure="using:Kona.Infrastructure" mc:Ignorable="d"
    infrastructure:ViewModelLocator.AutoWireViewModel="true"
    d:DesignHeight="120"
    d:DesignWidth="195">

    <!-- <snippet600> -->
    <!-- <snippet401> -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="Auto" Margin="0,15,0,0">
        <Button x:Name="HomeAppBarButton" x:Uid="HomeAppBarButton"
                AutomationProperties.AutomationId="HomeAppBarButton"
                Command="{Binding HomeNavigationCommand}" 
                Margin="5,0" 
                Style="{StaticResource HouseStyle}" 
                Content="Home"  />
